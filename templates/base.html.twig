<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">

    <title>{% block title %}Welcome!{% endblock %}</title>
    {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container-fluid">
        <a class="navbar-brand" href="{{ path('book_index') }}"><font style="vertical-align: inherit;"><font
                        style="vertical-align: inherit;">Bibliothéque</font></font></a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01"
                aria-controls="navbarColor01" aria-expanded="false" aria-label="Basculer la navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                    {% if is_granted('ROLE_ADMIN') %}
                        <a class="nav-link" href="{{ path('type_index') }}"><font
                                    style="vertical-align: inherit;"><font style="vertical-align: inherit;">Genres
                                </font></font><span class="visually-hidden"><font style="vertical-align: inherit;"><font
                                            style="vertical-align: inherit;">(courant)</font></font></span>
                        </a>
                    {% endif %}
                </li>

                
                <li class="nav-item">
                    {% if is_granted('ROLE_ADMIN') %}
                        <a class="nav-link" href="{{ path('author_index') }}"><font
                                    style="vertical-align: inherit;"><font
                                        style="vertical-align: inherit;">Auteurs</font></font></a>
                    {% endif %}
                </li>
                </li>
                <li class="nav-item">
                    {% if is_granted('ROLE_ADMIN') %}
                        <a class="nav-link" href="{{ path('loan_index') }}"><font style="vertical-align: inherit;"><font
                                        style="vertical-align: inherit;">Emprunts</font></font></a>
                    {% endif %}
                </li>
                <li class="nav-item">
                    {% if is_granted('ROLE_ADMIN') %}
                        <a class="nav-link" href="{{ path('borrower_index') }}"><font
                                    style="vertical-align: inherit;"><font
                                        style="vertical-align: inherit;">Emprunteurs</font></font></a>
                    {% endif %}
                </li>
                <li class="nav-item">
                    {% if is_granted('ROLE_ADMIN') %}
                        <a class="nav-link" href="{{ path('user_index') }}"><font style="vertical-align: inherit;"><font
                                        style="vertical-align: inherit;">Utilisateurs</font></font></a>
                    {% endif %}
                </li>
                <li class="nav-item">
                    {% if is_granted('ROLE_ADMIN') %}
                        <a class="nav-link" href="{{ path('app_logout') }}"><font style="vertical-align: inherit;"><font
                                        style="vertical-align: inherit;">Déconnexion</font></font></a>
                    {% else %}
                        <a class="nav-link" href="{{ path('app_login') }}"><font style="vertical-align: inherit;"><font
                                        style="vertical-align: inherit;">Connexion</font></font></a>
                    {% endif %}
                </li>
            </ul>

        </div>
    </div>
</nav>
{% block body %}{% endblock %}
</body>
</html>
