{% extends 'base.html.twig' %}

{% block title %}emprunts{% endblock %}

{% block body %}
    <h2>emprunts</h2>

    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Loan_date</th>
                <th scope="col">Return_date</th>
                <th scope="col">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for loan in loans %}
            <tr class="table-light">
            
                <td>{{ loan.id }}</td>
                <td>{{ loan.loanDate ? loan.loanDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ loan.returnDate ? loan.returnDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a class="btn btn-info btn-sm" href="{{ path('loan_show', {'id': loan.id}) }}">show</a>
                    <a class="btn btn-success btn-sm"  href="{{ path('loan_edit', {'id': loan.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('loan_new') }}">Create new</a>
{% endblock %}
